<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.security_study.mapper.UserRoleMapper">
    <resultMap id="UserRoleResultMap" type="com.korit.security_study.entity.UserRole">
        <id property="userRoleId" column="user_role_id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>
    <resultMap id="RoleResultMap" type="com.korit.security_study.entity.Role">
        <id property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="roleNameKor" column="role_name_kor"/>
    </resultMap>
    <select id="findByUserId" resultMap="UserRoleResultMap">
        select
            *
        from
            user_role_tb
        where
            user_id = #{userId}
    </select>
    <select id="findByRoleId" resultMap="UserRoleResultMap">
        select
            *
        from
            user_role_tb
        where
            role_id = #{roleId}
    </select>
    <insert id="addUserRole">
        insert into
            user_role_tb
        value
            (0, #{userId}, #{roleId});
    </insert>
</mapper>